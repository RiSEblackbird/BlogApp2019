<html id="login">
  <div class="container" id="user-forms">
    <div class="col-5 mx-auto">
      <%= render 'devise/guest-form' %>
      <h4 class="text-bold">ログイン</h4>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.text_field :username, autofocus: true, autocomplete: "username",
              class: "form-control", placeholder: "アカウント名" %>
        </div>
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "form-control", placeholder: "Eメールアドレス" %>
        </div>
        <div class="field">
          <%= f.password_field :password, autocomplete: "new-password",
              class: "form-control", placeholder: "パスワード" %>
        </div>
        <div class="p-0">
        <% if devise_mapping.rememberable? %>
    　　　　<div class="form-check p-0 row">
    　　　　  <%= f.check_box :remember_me, class: "form-check-input", type: "checkbox", id: "check_box" %>
    　　　　  <%= f.label :remember_me, class: "form-check-label", id: "ckeck-label" %>
  　　　　  </div>
  　　　　<% end %>
         </div>
        <div class="actions">
          <%= f.submit "ログインする", class: "btn btn-sm btn-success" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</html>

<div class="card" id="guestuser-form">
  <h4 class="card-header">ユーザー体験の確認用</h4>
  <% if User.where(email: "guest@mail.com").present? %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class= "input-group" id="article-title">
        <%= f.hidden_field :username, value: "ゲスト" %>
        <%= f.hidden_field :email, value: "guest@mail.com" %>
        <%= f.hidden_field :password, value: "guestguest1" %>
      </div>
      <%= f.submit 'ゲスト１としてログインする', class: 'container btn btn-secondary btn-lg btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class= "input-group" id="article-title">
        <%= f.hidden_field :username, value: "ゲスト" %>
        <%= f.hidden_field :email, value: "guest@mail.com" %>
        <%= f.hidden_field :profile, value: "このアカウントはポートフォリオの内容を確認するためのものです。" %>
        <%= f.hidden_field :password, value: "guestguest1" %>
      </div>
      <%= f.submit 'ゲスト１ユーザーの登録(初回のみ)', class: 'container btn btn-secondary btn-lg btn-block' %>
    <% end %>
  <% end %>
</div>

<div class="m-0 card rounded-0">
  <button type="button" data-toggle="modal" data-target="#user-modal-<%= user_type %>-<%= article.user.id %>" class="m-0 p-0 border-0" id="modal-btn">
    <div class="card-header p-1 rounded-0 d-flex justify-content-between">
      <div class="d-flex p-0">
        <div class="d-flex mx-1 align-self-center">
          <%= image_tag article.author.image.url, class: 'rounded', :size => '30x30' if article.author.image.url.present? %>
        </div>
        <div class="d-flex flex-column align-self-center" id="date">
          <div class="mr-1 font-weight-bold text-left" id="author">
            <%= article.author.username %>
            <%= render 'users/user_card_attribute_badge', user: article.author %>
          </div>
          <div class="text-truncate" id="date"><%= article.created_at.strftime("%m月%d日 %H:%M") %></div>
        </div>
      </div>
    </div>
  </button>
  <%= render 'articles/articles_cards_card_modal_user', article: article, user: article.user, user_type: user_type %>
  <button type="button" data-toggle="modal" data-target="#article-modal-<%= article_type %>-<%= article.id %>" class="m-0 p-0 border-0" id="modal-btn">
    <div class="card-header rounded-0 p-1 px-2 btn-secondary text-align-start" data-toggle="modal" data-target="#article-modal">
      <div class="align-self-center text-truncate text-left" id="title">
        <%= render 'articles/article_card_notice_type_badge', article: article %>
        <%= article.title %>
      </div>
    </div>
    <div class="card d-flex m-0 p-0 justify-content-center">
      <div class="articles-cards-picture-field">
        <%= image_tag article.article_picture.url, class: "article-picture" if article.article_picture.url.present? %>
      </div>
    </div>
    <div class="card-body p-2 text-left" id="article-body">
      <%= markdown(article.body).html_safe %>
    </div>
    <div class="card-footer p-0" id="counts">
      コメント(<%= article.comment_count %>) いいね(<%= article.like_count %>)
    </div>
  </button>
  <%= render 'articles/articles_cards_card_modal_article', article: article, article_type: article_type %>
  <div class="card-footer p-0" id="tag-footer">
    <%= render 'tags/tags_badges_line', tags: article.tag_list %>
  </div>
</div>

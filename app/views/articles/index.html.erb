<% provide(:title, '新着記事一覧') %>

  <div class="card-deck mx-auto" id="columns">
    <% @articles.each do |article| %>
    <div class="col-3 justify-content-center">
      <div class="card">
        <div class="card-header"><%= article.title %></div>
        <div class="card-body">
          <p class="card-text"><%= article.body %></p>
        </div>
        <%= link_to "続きを読む", article, id: "article-more" %>
        <div class="card-footer", id="tag-footer">
          <% article.tag_list.each do |tag| %>
            <span class="tag badge badge-primary float-left"><%= tag %></span>
          <% end %>
        </div>
        <div class="card-footer d-flex justify-content-between", id="date-footer">
          <div class="badge badge-warning d-flex">
            <div class="align-self-center mr-1">
              <%= image_tag 'default.jpg', class: 'plofile_img', :size => '20x20' %>
            </div>
            <div class="align-self-center font-weight-bold">
              <%= article.username %>
            </div>
          </div>
          <div class="d-flex flex-column align-self-center" id="date">
            <div><%= article.updated_at.strftime("%Y/%m/%d 更新") %></div>
            <div><%= article.created_at.strftime("%Y/%m/%d 投稿") %></div>
          </div>
        </div>
      </div>
      </div>
    <% end %>
  </div>

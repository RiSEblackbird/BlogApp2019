<% provide(:title, '新着記事一覧') %>

  <div class="card-deck mx-auto" id="columns">
    <% @articles.each do |article| %>
    <div class="col-12 col-sm-6 col-md-4 col-lg-3 justify-content-center">
      <div class="p-0 card">
        <button type="" data-toggle="modal" data-target="#article-modal" class="m-0 p-0 border-0" id="mordal-btn">
          <div class="card-header p-1 d-flex justify-content-between">
            <div class="d-flex p-0">
              <div class="d-flex mx-1 align-self-center">
                <%= image_tag 'default.jpg', class: 'plofile_img', :size => '30x30' %>
              </div>
              <div class="d-flex flex-column align-self-center" id="date">
                <div class="mr-1 font-weight-bold text-left" id="author">
                  <%= article.author.username %>
                </div>
                <div class="text-truncate" id="date"><%= article.created_at.strftime("%m月%d日 %H:%M") %></div>
              </div>
            </div>
          </div>
        </button>
        <button type="" data-toggle="modal" data-target="#article-modal" class="m-0 p-0 border-0" id="mordal-btn">
        <div class="card-header rounded-0 p-1 px-2 btn-secondary text-align-start" data-toggle="modal" data-target="#article-modal">
          <div class="align-self-center text-truncate text-left" id="title"><%= article.title %></div>
        </div>
        <div class="card-body p-2">
          <p class="card-text text-left"><%= article.body %></p>
        </div>
        </button>
        <div class="card-footer p-1 d-flex text-truncate" id="tag-footer">
          <div class="d-flex text-truncate">
            <% article.tag_list.each do |tag| %>
              <span class="tag badge badge-primary"><%= tag %></span>
            <% end %>
          </div>
        </div>
      </div>
      </div>
      <% end %>
      <div class="container d-flex">
        <div class="mx-auto">
          <%= paginate @articles %>
        </div>
      </div>
      </div>
  </div>

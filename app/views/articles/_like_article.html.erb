<% if @article.like_user(current_user.id) %>
  <%= button_to article_like_path(@article, @like), method: :delete, class: "btn btn-sm btn-warning", id: "like-button", remote: true do %>
    <%= icon('fa', 'thumbs-up') %>(<%= @article.like_count %>) いいねを取り消す
  <% end %>
<% else %>
  <%= button_to [@article, @article.likes.new(article_id: @article.id, user_id: current_user.id)], class: "btn btn-sm btn-warning", id: "like-button", remote: true do %>
    <%= icon('fa', 'thumbs-up') %>(<%= @article.like_count %>) 　いいねする　　
  <% end %>
<% end %>

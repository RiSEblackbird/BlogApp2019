<% if current_user %>
  <% if current_page?(controller: 'articles', action: 'index') %>
    <%= render 'users/follow_in_articles', user: user %>
  <% elsif current_page?(controller: 'users', action: 'index') %>
    <%= render 'users/follow_in_users', user: user %>
  <% elsif current_page?(controller: 'users', action: 'show') %>
    <%= render 'users/follow_at_an_user', user: user %>
  <% end %>
<% end %>

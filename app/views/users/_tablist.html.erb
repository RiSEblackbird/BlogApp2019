<div class="col-11 mx-auto">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="home-tab" data-toggle="tab" href="#articles" role="tab" aria-controls="home" aria-selected="true">投稿記事(<%= @user.article_count %>)</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="profile-tab" data-toggle="tab" href="#comments" role="tab" aria-controls="profile" aria-selected="false">投稿コメント(<%= @user.comment_count %>)</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="contact-tab" data-toggle="tab" href="#like_articles" role="tab" aria-controls="contact" aria-selected="false">いいねした記事(<%= @user.like_count %>)</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="contact-tab" data-toggle="tab" href="#stocks" role="tab" aria-controls="contact" aria-selected="false">ストックした記事(<%= @user.stock_count %>)</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="contact-tab" data-toggle="tab" href="#follows" role="tab" aria-controls="contact" aria-selected="false">フォロー(<%= @user.followings.count %>)</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="contact-tab" data-toggle="tab" href="#followers" role="tab" aria-controls="contact" aria-selected="false">フォロワー(<%= @user.followers.count %>)</a>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane show active border" id="articles" role="tabpanel" aria-labelledby="home-tab"><%= render 'users/articles' %></div>
    <div class="tab-pane border" id="comments" role="tabpanel" aria-labelledby="profile-tab"><%= render 'users/comments' %></div>
    <div class="tab-pane border" id="like_articles" role="tabpanel" aria-labelledby="home-tab"><%= render 'users/liked_articles' %></div>
    <div class="tab-pane border" id="stocks" role="tabpanel" aria-labelledby="home-tab"></div>
    <div class="tab-pane border" id="follows" role="tabpanel" aria-labelledby="home-tab"><%= render 'users/followings' %></div>
    <div class="tab-pane border" id="followers" role="tabpanel" aria-labelledby="home-tab"><%= render 'users/followers' %></div>
  </div>
</div>

<% provide(:title, "アカウント一覧") %>

<div class="card-deck mx-auto" id="user-card">
  <% @users.each do |user| %>
  <div class="col-12 col-sm-12 col-md-6 col-lg-6 justify-content-center">
    <div class="card">
      <div class="card-body media p-0 d-flex">
        <div class="d-flex m-1 mr-2 align-self-center">
          <% if user.image.url.present? %>
            <%= image_tag 'default.jpg', class: 'plofile_img', :size => '85x85' %>
          <% else %>
            <%= image_tag 'default.jpg', class: 'plofile_img', :size => '85x85' %>
          <% end %>
        </div>
        <div class="media-body mt-1 mr-1">
          <div class="font-weight-bold" id="name">
            <%= link_to user.username, user, id: "user-more" %>
          </div>
          <div id="profile">
            <% if user.profile.present? %>
              <div><%= user.profile %></div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    </div>
  <% end %>
  <div class="container d-flex">
    <div class="mx-auto">
      <%= paginate @users %>
    </div>
  </div>
</div>

<% provide(:title, "#{current_user.username}") %>

<div class="card">
  <div class="card-header">
    <div>アカウント名：<%= @user.username %></div>
  </div>

  <div>
    <p, class="card-body input-group-text">プロフィール</p>
    <div><%= simple_format(@user.profile) %></div>
  </div>
</div>

<% if current_user.id == @user.id %>
  <%= link_to "ユーザー情報の編集", edit_user_registration_path, class: 'btn btn-secondary btn-lg btn-block' ,id: 'edit-btn' %>
<% end %>
